{
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "@hoc/*": [
        "hoc/*"
      ],
      "@components/*": [
        "components/*"
      ],
      "@styles/*": [
        "styles/*"
      ],
      "@modal/*": [
        "modal/*"
      ],
      "@store/*": [
        "store/*"
      ]
    },
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react-native",
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "src",
    "app"
  ],
  "extends": "expo/tsconfig.base"
}